<div class="row">
  <div class="col-md-8">
    {{input type="text" value=newTodoTitle action="createTodo" placeholder="Make a New Todo!"}}
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <ul>
      {{#each todo in model.todos itemController="todo"}}
      <li>
        {{input type="checkbox" checked=todo.isCompleted}}
        {{#if todo.isEditing}}
          {{edit-title type="text" value=todo.model.title focus-out="updateTitle" insert-newline="updateTitle"}}
        {{else}}
          {{todo.model.title}}
          <button {{action "deleteTodo" todo.model.id}} class="destroy btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button>
          <button {{action "editTitle"}} class="destroy btn btn-info btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
        {{/if}}
      </li>
      {{/each}}
    </ul>
  </div>
</div>
